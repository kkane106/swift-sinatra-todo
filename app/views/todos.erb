
<div id="show">
	<h1>Todos</h1>
	<ul>
	<% @todos.each do |todo| %>
	  <li>  	
	    <a href="/todo/<%= todo.id %>"><%= todo.text %></a> ::: <button type="submit" form="delete" value="submit">Delete</button>
			<form accept-charset="UTF-8" action="/todo/<% todo.id %>" method="post" id="delete">
				 <input name="utf8" type="hidden" value="<% todo.id %>" />
			</form>
			
	  </li>
	<% end %>
	</ul>
	<a href="/new">New todo</a>
</div>